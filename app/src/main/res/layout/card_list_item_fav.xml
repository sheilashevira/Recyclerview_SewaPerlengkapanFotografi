<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="5dp"
    android:layout_marginTop="5dp"
    android:id="@+id/cardviewFav">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:padding="2dp"
            android:id="@+id/image_fav"/>

        <TextView
            android:id="@+id/produk_fav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Favorite"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_margin="10dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@id/image_fav"/>

        <TextView
            android:id="@+id/desproduk_fav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description Favorite"
            android:textSize="14sp"
            android:layout_below="@+id/produk_fav"
            android:layout_toEndOf="@+id/image_fav"
            android:layout_marginStart="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="2dp"/>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/delete"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/desproduk_fav"
            android:layout_marginBottom="2dp"
            android:background="@drawable/delete"/>


    </RelativeLayout>

</androidx.cardview.widget.CardView>