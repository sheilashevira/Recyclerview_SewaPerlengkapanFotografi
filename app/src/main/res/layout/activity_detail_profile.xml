<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login"
    android:background="#ffffff">

    <RelativeLayout
        android:id="@+id/profile"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/bgprofile2">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageview_profile"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:src="@drawable/hijoyprofile"
            app:civ_border_color="#000000"
            app:civ_border_width="2dp" />

        <TextView
            android:id="@+id/nama_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageview_profile"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="Hijoy Full"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/username_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nama_profile"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="hijoyambyar"
            android:textSize="12sp" />
    </RelativeLayout>


    <LinearLayout
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/profile"
        android:layout_marginTop="0dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/profile">

        <TextView
            android:id="@+id/textname"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center_vertical"
            android:text="Username"
            android:textColor="#000000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/nama"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textAlignment="textEnd"
            android:layout_marginLeft="10dp"
            android:text="hijoy14162328"
            android:textColor="#808080"
            android:textSize="15dp"
            tools:ignore="RtlCompat" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/user"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/name"
        android:layout_marginTop="0dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/name">
        <TextView
            android:id="@+id/testusername"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center_vertical"
            android:text="Name"
            android:textColor="#000000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/username"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textAlignment="textEnd"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:text="Hijoy Full"
            android:textColor="#808080"
            android:textSize="15sp"
            tools:ignore="RtlCompat" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/user"
        android:layout_marginTop="0dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/user">

        <TextView
            android:id="@+id/textemail"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center_vertical"
            android:text="E-Mail"
            android:textColor="#000000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/pesan"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textAlignment="textEnd"
            android:layout_marginLeft="10dp"
            android:text="hijoy14162328@gmail.com"
            android:textColor="#808080"
            android:textSize="15sp"
            tools:ignore="RtlCompat" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/phone"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/email"
        android:layout_marginTop="0dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/email">

        <TextView
            android:id="@+id/textphone"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center_vertical"
            android:text="Phone Number"
            android:textColor="#000000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/notelepon"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textAlignment="textEnd"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:text="087762345678"
            android:textColor="#808080"
            android:textSize="15sp"
            tools:ignore="RtlCompat" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/gender"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/phone"
        android:layout_marginTop="0dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/phone">

        <TextView
            android:id="@+id/textgender"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center_vertical"
            android:text="Gender"
            android:textColor="#000000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/jnskelamin"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textAlignment="textEnd"
            android:layout_marginLeft="10dp"
            android:text="Female"
            android:textColor="#808080"
            android:textSize="15sp"
            tools:ignore="RtlCompat" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/alamat"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/gender"
        android:layout_marginTop="0dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/gender">

        <TextView
            android:id="@+id/textalamat"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center_vertical"
            android:text="Alamat"
            android:textColor="#000000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/alamatuser"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textAlignment="textEnd"
            android:layout_marginLeft="10dp"
            android:text="Jl. Bukit Dharma IV No 2"
            android:textColor="#808080"
            android:textSize="15sp"
            tools:ignore="RtlCompat" />
    </LinearLayout>
</RelativeLayout>

