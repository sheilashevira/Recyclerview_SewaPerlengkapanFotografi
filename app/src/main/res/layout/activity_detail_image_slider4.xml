<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home.ImageSlider.DetailImageSlider4">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_centerHorizontal="true"
                android:layout_margin="20dp"
                android:id="@+id/imageslider4"
                android:background="@drawable/imageslider4"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:id="@+id/titleimgslider4"
                android:layout_below="@+id/imageslider4"
                android:text="Cara Memasang Kamera ke Tripod: 10 Langkah Mudah"
                android:textAlignment="center"
                android:textSize="22dp"
                android:textStyle="bold"
                android:textColor="#000000"/>

            <TextView
                android:id="@+id/infoimgslider4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/titleimgslider4"
                android:layout_margin="15dp"
                android:text="@string/ImageSlider4"
                android:textColor="#000000"
                android:textSize="14sp" />

        </LinearLayout>

    </ScrollView>

</RelativeLayout>