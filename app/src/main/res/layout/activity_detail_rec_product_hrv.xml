<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home.HorizontalRecyclerView.DetailRecProductHRV">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/scrollView"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/rpImageView"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="30dp"
                android:src="@drawable/aksesoris3"
                android:layout_margin="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/namaRP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:textAlignment="center"
                android:text="Nama Top Produk"
                android:textColor="#000000"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@+id/rpImageView" />

            <TextView
                android:id="@+id/desRP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="Descrtiption"
                android:textColor="#000000"
                android:textSize="14sp"
                android:justificationMode="inter_word"
                app:layout_constraintTop_toBottomOf="@+id/namaRP" />

            <Button
                android:id="@+id/sewaRP"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="130dp"
                android:layout_marginBottom="15dp"
                android:text="RENT NOW !"
                android:background="@drawable/bg_btn"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:backgroundTint="@color/color2"
                app:layout_constraintTop_toBottomOf = "@+id/desRP"/>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>